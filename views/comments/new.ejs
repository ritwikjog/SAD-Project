 <% include ../partials/header %>

<div class="container">
	<h1 style="text-align:center; padding-bottom:20px; padding-top:20px;">Add a new comment to <%= room.name %></h1>
	<div class="row">
		<div style="width=30%; margin:0 auto">
			<form action="/rooms/<%= room._id %>/comments" method="POST">		
				<div class="form-group">
					<input type="text" class="form-control" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="comment[author]" placeholder="Author">
				</div>
				<div class="form-group" >
					<button class="btn btn-lg btn-primary">Submit</button>
				</div>
			</form>
			<p><a href="/">Go Back</a></p>
		</div>
	</div>
</div>

<% include ../partials/footer %>
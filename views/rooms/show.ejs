<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				YelpCamp
			</p>
			<div class="list-group">
				<li class="list-group-item active">Item1</li>
				<li class="list-group-item">Item2</li>
				<li class="list-group-item">Item3</li>
			</div>
		</div>
		<div class="col-md-9">
				<div class="thumbnail">
					<img class="image-responsive"  src="<%=room.image%>">
					<div class="caption-full">
						<h4 style="text-align:right;">
							$9.00/night
						</h4>
					<h4><a><%= room.name %></a></h4>
					<p>Description: <%= room.desc %></p>
					</div>
				</div>
			<div class="well">
				<div class="text-right">
					<a href="/rooms/<%= room._id %>/comments/new" class="btn btn-sm btn-primary">Leave a Review</a>
				</div>
				<hr>
				<% room.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author %></strong>
						<span style="padding-left:0">  (10 days ago)</span>
					</div>
				</div>
				<p>
					<%=comment.text %>
				</p>
				<% }); %>
				<a href="/rooms/<%= room._id %>/book" class="btn btn-sm btn-success">	Book Room				</a>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>

